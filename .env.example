# OpenAI API キー
# 取得方法: https://platform.openai.com/ でアカウント作成後、APIキーを発行
OPENAI_API_KEY=your_openai_api_key_here

# Google AI (Gemini) API キー 
# 取得方法: https://aistudio.google.com/ でアカウント作成後、APIキーを発行
GOOGLE_API_KEY=your_google_api_key_here

# Flaskセッション用シークレットキー（本番環境では必ず変更してください）
# セキュリティ要件:
#   - 最小32文字以上（推奨: 48-64文字）
#   - 大文字・小文字・数字・特殊文字を含む
#   - 予測可能なパターンを避ける
#
# 生成方法:
#   python scripts/generate_secret_key.py
#   python scripts/generate_secret_key.py --length 48
#   python scripts/generate_secret_key.py --check "your-existing-key"
#
# 簡易生成: python -c "import secrets; print(secrets.token_urlsafe(48))"
FLASK_SECRET_KEY=your-secure-secret-key-here-minimum-32-chars

# ========================================
# 機能フラグ設定（段階的無効化）
# ========================================

# モデル選択UIの表示（true/false）
# false にすると DEFAULT_MODEL が常に使用されます
ENABLE_MODEL_SELECTION=false

# デフォルトモデル（ENABLE_MODEL_SELECTION=false の場合に使用）
DEFAULT_MODEL=gemini-1.5-flash

# TTS（音声読み上げ）機能の有効化（true/false）
ENABLE_TTS=false

# 学習履歴機能の有効化（true/false）
ENABLE_LEARNING_HISTORY=false

# 強み分析機能の有効化（true/false）
ENABLE_STRENGTH_ANALYSIS=false